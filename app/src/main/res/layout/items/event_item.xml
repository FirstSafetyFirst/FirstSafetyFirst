<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="2dp">

    <RelativeLayout android:id="@+id/cont1"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout android:id="@+id/content_holder"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/line"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="fill"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:text="Event Title"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:padding="5dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/event_avtar"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/welcome"
                android:layout_margin="5dp"
                android:layout_alignParentRight="true"
                android:layout_height="100dp"/>

        </LinearLayout>
        <RelativeLayout android:id="@+id/menus"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:layout_below="@+id/content_holder"
            android:layout_height="wrap_content">
            <android.support.design.widget.CheckableImageButton
                android:id="@+id/favicon"
                android:layout_width="40dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:background="@color/blue"
                android:layout_height="40dp" />
            <TextView
                android:layout_width="wrap_content"
                android:text="TOI"
                android:id="@+id/organizer_image"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/favicon"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="01:00AM"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/organizer_image"
                android:layout_toRightOf="@+id/favicon"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="200dp"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_event_available_black_24dp"
                    android:text="Going"
                    android:textSize="10sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:backgroundTint="#00000000"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_event_black_24dp"
                    android:text="Maybe"
                    android:textSize="10sp"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:backgroundTint="#00000000"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_event_busy_black_24dp"
                    android:text="Not Going"
                    android:textSize="10sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:backgroundTint="#00000000"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>
        <View android:id="@+id/line1"
            android:layout_below="@+id/menus"
            android:layout_width="match_parent"
            android:background="#dadada"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_height="1dp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>