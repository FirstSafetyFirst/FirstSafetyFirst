<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    tools:context="com.products.safetyfirst.fragment.Interest_Fragment">

    <RelativeLayout
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/interests"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />

        <android.support.v7.widget.CardView
            android:layout_below="@+id/title"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="4dp"
            app:cardElevation="8dp"
android:layout_above="@+id/actionbarT"
            app:contentPaddingBottom="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/field1"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="Field1"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/field2"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="end"
                    android:layout_toEndOf="@+id/field1"
                    android:layout_toRightOf="@+id/field1"
                    android:text="Field2"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/field3"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="Field3"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <Button
                    android:id="@+id/field4"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="Field4"
                    android:textStyle="bold"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/field2"
                    android:layout_toEndOf="@+id/field2" />
                <Button
                    android:id="@+id/field5"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="Field5"
                    android:textStyle="bold"
                    android:layout_below="@+id/field2"
                    android:layout_toRightOf="@+id/field8"
                    android:layout_toEndOf="@+id/field8" />
                <Button
                    android:id="@+id/field6"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="Field6"
                    android:textStyle="bold"
                    android:layout_below="@+id/field1"
                    android:layout_toLeftOf="@+id/field8"
                    android:layout_toStartOf="@+id/field8"
                    android:layout_marginRight="15dp"
                    android:layout_marginEnd="15dp" />


                <Button
                    android:id="@+id/field7"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="Field3"
                    android:textStyle="bold"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/field4"
                    android:layout_toEndOf="@+id/field4" />

                <Button
                    android:id="@+id/field8"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="Field4"
                    android:textStyle="bold"
                    android:layout_below="@+id/field2"
                    android:layout_centerHorizontal="true" />



            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.Toolbar
            android:id="@+id/actionbarT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:layout_alignParentBottom="true"
            android:minHeight="?attr/actionBarSize"
            app:theme="@style/Base.Theme.AppCompat.CompactMenu">

            <LinearLayout
                android:id="@+id/toolbarmenucontainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent"
                    android:clickable="true"
                    android:textColor="@color/white"
                    android:text="UPDATE" />

                <Button
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent"
                    android:clickable="true"
                    android:textColor="@color/white"
                    android:text="SKIP" />

            </LinearLayout>

        </android.support.v7.widget.Toolbar>
    </RelativeLayout>

</FrameLayout>
