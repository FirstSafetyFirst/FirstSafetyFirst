<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.products.safetyfirst.activity.PostDetailActivity"
        tools:showIn="@layout/activity_post_detail">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/post_title"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="match_parent"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-light"
                android:textIsSelectable="true"
                android:text="Title" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray"
                />

            <LinearLayout
                android:id="@+id/post_author_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/post_author_photo"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:tint="@color/gray_light"
                    app:srcCompat="@drawable/ic_person_black_24dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/post_author"
                        style="@style/Base.TextAppearance.AppCompat.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:gravity="center_vertical"
                        tools:text="Vikas Mahato"
                        android:textColor="@color/gray"
                        android:textIsSelectable="true" />
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/post_author_email"
                        style="@style/Base.TextAppearance.AppCompat.Caption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        tools:text="vikasmahato0@gmail.com"
                        android:layout_marginStart="10dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/gray"
                        android:textIsSelectable="true"
                        android:textStyle="italic" />
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginStart="@dimen/recycler_view_left_offset"
                    android:clipChildren="false"
                    android:overScrollMode="never"
                    android:orientation="horizontal"/>
            </RelativeLayout>

            <ImageView
                android:id="@+id/post_image"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="256dp"
                android:cropToPadding="true"/>

            <com.products.safetyfirst.utils.JustifiedWebView
                android:id="@+id/post_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/info_background" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_comments"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/comment_item" />

        </LinearLayout>

</LinearLayout>
