<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/card_margin_horizontal"
    app:cardBackgroundColor="@android:color/white"
    android:id="@+id/news_item_card_view">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView android:id="@+id/title"
            android:typeface="sans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:maxLines="2"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="sans-serif-light"
            tools:text="Fu-5 things for Monday, April 24,North korea, Trump,Afganistan" />

        <ImageView
            android:id="@+id/news_avtar"
            android:layout_width="match_parent"
            android:layout_height="256dp"
            android:contentDescription="@string/news_image"
            android:src="@drawable/ic_launcher"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/noOfViews"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 Views"
                android:gravity="center"
                android:fontFamily="sans-serif-thin"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_vertical_margin"/>

            <android.support.design.widget.CheckableImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                app:srcCompat="@drawable/ic_share_black_24dp" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>